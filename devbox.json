{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "bashInteractive@latest",
    "coreutils@latest",
    "moreutils@latest",
    "git@latest",
    "glow@latest",
    "runme@latest",
    "path:.#presenterm",
    "mermaid-cli@latest",
    "marp-cli@latest",
    "mdp@latest"
  ],
  "env": {
    "GREETING": "Welcome to nix-presentations' devbox shell!"
  },
  "shell": {
    "init_hook": [
      "cowsay \"${GREETING}\""
    ],
    "scripts": {}
  }
}
